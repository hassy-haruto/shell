#!/bin/bash
# 配列

colors=(red blue pink)

echo ${colors[0]} # red
echo ${colors[1]} # blue
echo ${colors[2]} # pink
echo ${colors[@]} # red blue pink
echo ${#colors[@]} # 3 (個数を表示したい場合パウンド記号を使う)

# 実行コマンド
# hashiguchi.haruto-01@mbp shell % ./hello
# red
# blue
# pink
# red blue pink
# 3

colors=(red blue pink)

colors[1]=silver
colors+=(green orange)
echo ${colors[@]}

# 実行コマンド
# hashiguchi.haruto-01@mbp shell % ./hello
# red silver pink green orange
